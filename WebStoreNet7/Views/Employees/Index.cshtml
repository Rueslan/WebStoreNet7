@model IEnumerable<WebStoreNet7.Models.Employee>

<title>Employees | E-Shopper</title>

<div class="container">
    <h3>Сотрудники</h3>
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th>Подробно</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                    <td><a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info">Инфо</a></td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-default">Главная</a>
    </p>
</div>
