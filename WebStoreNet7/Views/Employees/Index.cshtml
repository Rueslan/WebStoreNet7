@model IEnumerable<WebStoreNet7.Models.Employee>

<title>Employees | E-Shopper</title>

<div class="container">
    <h3>Сотрудники</h3>
    <hr />

        <p>
            <a asp-controller="Employees" asp-action="Create" class="btn btn-default">Создать</a>
        </p>
        <p>
            <a asp-controller="Employees" asp-action="Edit" class="btn btn-default">Создать</a>
        </p>

    @if (Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Фамилия</th>
                        <th>Имя</th>
                        <th>Отчество</th>
                        <th>Возраст</th>
                        <th>Подробно</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.LastName</td>
                            <td>@employee.FirstName</td>
                            <td>@employee.Patronymic</td>
                            <td>@employee.Age</td>
                            <td>
                                <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info">Инфо</a>
                                <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-default">Edit</a>
                                <a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-default">Delete</a>
                                <form asp-action="DeleteConfirmed" asp-route-id="@employee.Id">
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Сотрудники отсутствуют</p>
        }

    <p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-default">Главная</a>
    </p>
</div>
